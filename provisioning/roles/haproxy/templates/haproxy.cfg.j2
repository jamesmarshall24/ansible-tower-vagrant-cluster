# {{ ansible_managed }}

global
    debug
    stats socket /tmp/admin.sock
    stats timeout 30s

defaults
    log     global
    mode    http
    option  httplog
    option  dontlognull
    timeout connect 5000
    timeout client  50000
    timeout server  50000

frontend localnodes
    bind *:80
    mode http
    default_backend nodes

frontend localnodes_ssl
    bind *:443
    mode tcp
    default_backend nodes_ssl

frontend rabbitctl
    bind *:5672
    mode http
    default_backend rabbitctl_nodes

backend nodes
    mode http
    balance roundrobin
    option forwardfor
    option http-pretend-keepalive
    http-request set-header X-Forwarded-Port %[dst_port]
    http-request add-header X-Forwarded-Proto https if { ssl_fc }
    option httpchk HEAD / HTTP/1.1\r\nHost:localhost
{% for host in groups['tower'] %}
    server {{ host }}.local {{ host }}.local:80 check
{% endfor %}

backend nodes_ssl
    mode tcp
    balance roundrobin
{% for host in groups['tower'] %}
    server {{ host }}.local {{ host }}.local:443 check
{% endfor %}

backend rabbitctl_nodes
    mode http
    balance roundrobin
    option forwardfor
    option http-pretend-keepalive
    http-request set-header X-Forwarded-Port %[dst_port]
    http-request add-header X-Forwarded-Proto https if { ssl_fc }
    #option httpchk HEAD / HTTP/1.1\r\nHost:localhost
{% for host in groups['tower'] %}
    server {{ host }}.local {{ host }}.local:5672
{% endfor %}

listen stats
    bind *:1936
    stats enable
    stats uri /
